<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.class_ic.dao.CalendarDAO">
   
<!-- 일정 등록 완료 -->   
<insert id="CalendarWriteOk" parameterType="com.class_ic.vo.CalendarDTO">  
insert into Calendar(calNo,classCode,calStart,calEnd,calTitle,calContent) values(#{calNo},#{classCode},#{calStart},#{calEnd},#{calTitle},#{calContent})
</insert>
   
<!-- 일정 보기 -->
<select id="CalendarList"  parameterType="com.class_ic.vo.CalendarDTO">
select calStart,  calEnd, calTitle, calContent from Calendar where calNo=#{calNo}
</select>
   
<!-- 일정 수정-->
<update id="CalendarEdit" >
update Calendar set calStart=#{calStart}, calEnd=#{calEnd}, calTitle=#{calTitle}, calContent=#{calContent} where calNo=#{calNO}
</update>

   
<!-- 일정 삭제  -->
<delete id="CalendarDelete" >
delete from Calendar where calNo=#{calNo}
</delete>   
    

</mapper>
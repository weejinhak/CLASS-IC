 <mapper namespace="com.class_ic.dao.MemoDAO">
 
<!-- memo 등록 2017.06.16 최은혜 -->
<insert parameterType="com.class_ic.vo.MemoVO" id="insertMemo"> 
insert into memo(email,memoText,memoDate) values(#{email},#{memoText},now())
 </insert>

<!-- memo 삭제 2017.06.16 최은혜 -->
<delete parameterType="com.class_ic.vo.MemoVO" id="deleteMemo"> 
delete from memo where email=#{email} and memoNo=#{memoNo} 
</delete>

<!-- memo 출력 2017.06.16 최은혜 -->
<select parameterType="String" id="selectMemo" resultType="com.class_ic.vo.MemoVO"> 
select memoText from memo where email=#{email} 
</select>

</mapper>

